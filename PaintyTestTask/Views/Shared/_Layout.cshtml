<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaintyTestTask</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaintyTestTask.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated == false)
    {
        <header>

            <nav class="navbar " style="background:#fff">

                <div class="container">
                    <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                        <img height="40" src="https://static.tildacdn.com/tild6135-3530-4630-b237-313832373331/logo.png" alt="Painty">
                    </a>
                    <div class="navbar-wrap">
                        <ul class="navbar-menu">
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li class="login-navbar"><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                            <li class="register-navbar"><a asp-area="" asp-controller="Account" asp-action="Register">SIGN UP</a></li>
                        </ul>
                    </div>
                </div>

            </nav>
        </header>
    }

    @if (User.Identity.IsAuthenticated)
    {
        <header>

            <nav class="navbar " style="background:#fff">

                <div class="container">
                    <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                        <img height="40" src="https://static.tildacdn.com/tild6135-3530-4630-b237-313832373331/logo.png" alt="Painty">
                    </a>
                    <div class="navbar-wrap">
                        <ul class="navbar-menu">
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">Главная</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>

                            <li class="profile"><a>@User.Identity.Name</a></li>
                            <li class="register-navbar"><a asp-area="" asp-controller="Account" asp-action="Logout">LOGOUT</a></li>
                        </ul>
                    </div>
                </div>

            </nav>
        </header>
    }
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PaintyTestTask - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
